@{
    ViewData["Title"] = "Master Class - Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="bg-white shadow-lg p-5">
    <div class="head d-flex">
        <div class="col-10">
            <h1>Get Master Class details</h1>
        </div>

        <a class="" asp-controller="MasterClass" asp-action="ForMasterPost">
            <button class="btn mt-4 btn-primary btn-sm fw-bold ">
                Add Master Class
            </button>
        </a>
    </div>

    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

    <div class="container">
        <br />

        <div style="width:90%; margin:0 auto;">
            <table id="masterClassDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead class="bg-info">
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@section Scripts
{
<script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
<script>
        $(document).ready(function () {
            $("#masterClassDatatable").DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "pageLength": 10,
            "lengthMenu": [[10, 25, 50, 100, -1], ['10', '25', '50', '100', 'All']],
            "language": {
                searchPlaceholder: "Search here..."
            },
            "ajax": {
                "url": `${apiUrl}/MasterClass`,//https://localhost:7261/api/StatesApi
                "type": "get",
                //"datatype": "json",
                //"content-type":"json"
            },
            //"columnDefs": [{
            //    "targets": [0],
            //    "visible": false,
            //    "searchable": false
            //}],
            "columns":
            [
                { "data": "name", "name": "Name", "autoWidth": true },
                {
                    "className": "text-center",
                    "render": function (data, type, row) {
                        return `<input type="hidden" class="" value="${row.id}" />
                        <a class="bg-secondary btn btn-sm text-white cursor-pointer" href="/masterclass/formasterput?id=${row.id}" title="Edit"> <span class="fa fa-edit "></span>Edit </a>
                          <a class="bg-danger btn btn-sm text-white cursor-pointer" onClick="onDelete(${row.id})" title="Remove"><span class="fa fa-trash "></span> Delete </a>`;
                    }
                },
            ]
        });
    });
</script>
}



