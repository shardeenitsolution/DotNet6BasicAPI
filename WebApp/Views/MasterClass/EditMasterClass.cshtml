                <form>
                    <div class="form-group mb-3 d-none flex-column">
                        <input class="form-control shadow-sm" type="hidden" id="Id" name="Id">
                    </div>

                    <div class="form-group mb-3 d-flex flex-column">
                        <label for="masterCourseId" class="control-label"> Master Course Id: </label>
