@section Scripts {



<script>
       $(document).ready(function(){
           const params = new Proxy(new URLSearchParams(window.location.search), {
               get: (searchParams, prop) => searchParams.get(prop)});

       var id = params.id; // "some_value"
       $('#Id').val(id);
       console.log(id);

        $('form').on('submit',function(e){
           e.preventDefault();
          onAuthPut(this,"/MasterClass/",id);
       })

       // Ajax call for master course dropdown
       $.ajax({
           url: `${apiUrl}/MasterCourse/GetList`,
           method: 'GET',
           beforeSend: function (jqXHR) {
               jqXHR.setRequestHeader("Authorization", "Bearer " + access_token);
           },

       contentType: 'application/json',

       }).done(function (data) {
             $.each(data, function (key, value) {
           $("#masterCourseId").append($("<option></option>").val(value.id).html(value.name));
             })
           return data;

       }).fail(function (data) {
           alert('Error : (' + data.responseText + '). Please try later.');
       });
    })

</script>
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}