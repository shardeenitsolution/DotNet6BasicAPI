@model LIbrary.DTOs.AddStateModel

@{
    ViewData["Title"] = "CreateUsingModel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Using Model</h1>

<h4>AddStateModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUsingModel" enctype="multipart/form-data" data-ajax="true" data-ajax-url="https://localhost:44386/api/StatesApi" data-ajax-method="post" data-ajax-complete="completed">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
<script>
      $.ajaxSetup({
          contentType:'json',
      });
    completed = function (xhr) {
        alert(`Hi ${xhr.responseText}!`);
    };
</script>
}
